<% provide(:title, "New Post") %>
<h1>New Post</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:post, url: posts_path) do |f| %>
      <%= render 'shared/blog_form', object: f %>                                                             
      <%= f.submit "Post This Article", class: "btn btn-large btn-primary" %>
                                                                    
    <% end %>
  </div>
</div>
