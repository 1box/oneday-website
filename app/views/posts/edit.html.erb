<% provide(:title, "Edit post") %>
<h1>Update your Post</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@post) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= render 'shared/blog_form', object: f %>
      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
