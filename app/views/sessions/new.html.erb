<% provide(:title, t(:sign_in_title)) %>
<h1><%= t(:sign_in_title) %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

	    <%= f.label :email, t(:email_label) %>
      <%= f.text_field :email %> 
      <%= f.label :password, t(:password_label) %>
	    <%= f.password_field :password %>
      <%= f.submit t(:sign_in_button_title), class: "btn btn-large btn-primary" %>

    <% end %>

    <p><%= t(:sign_in_tip_message) %> <%= link_to t(:sign_in_new_button), signup_path %></p>
  </div>
</div>
