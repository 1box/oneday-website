<%= provide(:title, t(:sign_up_title)) %>
<h1><%= t(:sign_up_title) %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= render 'fields', f: f %>
	    <%= f.submit t(:create_account_title), class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
