<%# provide(:title, 'Home') %>
<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>

    <div class="span8">
      <h3><%= t(:micropost_feed_title) %></h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1><%= t(:welcome_message) %></h1>

    <h2>
      <%= t(:welcome_subtitle_prefix) %>
      <a href="http://oneboxapp.com/"><%= t(:welcome_subtitle_link) %></a>
      <%= t(:welcome_subtitle_suffix) %>
    </h2>

    <%= link_to t(:sign_up_now), signup_path, class: "btn btn-large btn-primary" %>
  </div>
  <%= link_to image_tag("Icon.png", alt: "icon"), 'http://oneboxapp.com/' %>
<% end %>


